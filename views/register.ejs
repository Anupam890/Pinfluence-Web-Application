<%- include('./partials/Header.ejs'); %>
    <div class="w-full h-screen bg-zinc-300 bg-center bg-no-repeat bg-cover flex items-center justify-center">
        <div class="w-full md:w-[50%] lg:w-[40%] xl:w-[30%] bg-white px-6 md:px-10 py-6 md:py-12 rounded-[30px]">
            <h1 class="text-2xl md:text-3xl lg:text-4xl text-center font-bold text-zinc-700 tracking-tight text-capitalize leading-none mb-6 md:mb-8">Create New Account</h1>
            <form action="/register" method="post">
                <input class="block w-full border-2 rounded-md mb-4 px-3 py-2" type="text" name="username" placeholder="Username">
                <input class="block w-full border-2 rounded-md mb-4 px-3 py-2" type="email" name="email" placeholder="Email">
                <input class="block w-full border-2 rounded-md mb-4 px-3 py-2" type="number" name="contact" placeholder="Number">
                <input class="block w-full border-2 rounded-md mb-4 px-3 py-2" type="password" name="password" placeholder="Password">
                <input class="block w-full bg-red-600 text-white rounded-full px-3 py-2 cursor-pointer" type="submit" value="Create Account ">
                <p class="text-zinc-700 font-semibold text-xs mt-4 md:mt-6 text-center">
                    By continuing, you agree to Pinterest's Terms of Service;
                </p>
            </form>
            <a href="/" class="block mt-7 text-zinc-700 text-sm font-semibold w-full text-center mx-auto">Login Existing Account!</a>

        </div>
    </div>


    <%- include('./partials/footer.ejs'); %>