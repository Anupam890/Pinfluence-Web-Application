<%- include('./partials/Header.ejs'); %>
    <div class="profile w-full min-h-screen bg-zinc-800 text-white pt-1">
        <form hidden id="uploadForm" action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="prof flex flex-col items-center mt-8 sm:mt-20">
            <div class="relative">
                <span id="uploadicon" class=" cursor-pointer w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                    <i class="text-zinc-800 ri-pencil-fill"></i>
                </span>
                <div class="w-24 h-24 sm:w-32 sm:h-32 bg-zinc-200 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user.profilePic %>" alt="">
                </div>
            </div>
            <h1 class="text-xl sm:text-3xl font-semibold mt-2 sm:mt-4">Anupam Mandal</h1>
            <h3 class="text-sm sm:text-md">@anupam890</h3>
            <div class="mt-2 px-4 py-2">
                <a href="#" class="text-xs mt-2 sm:mt-5 text-white px-5 sm:px-7 py-2 font-semibold rounded-full bg-zinc-700">Show</a>
                <a href="/edit" class="text-xs mt-2 sm:mt-5 text-white px-5 sm:px-7 py-2 font-semibold rounded-full bg-zinc-700">Edit profile</a>
            </div>
            <a href="/add" class="px-5 sm:px-10 mt-2 sm:mt-3 py-2 rounded-lg bg-red-700 text-xs sm:text-sm font-semibold">Add New Post</a>
        </div>
        <!-- cards -->

        <!-- cards -->
        <div class="cards flex flex-wrap gap-5 sm:gap-10 px-5 sm:px-10 mt-5 sm:mt-10">
            <% if (user.posts && user.posts.length > 0) { %>
                <div class="card">
                    <div class="w-48 h-36 sm:w-52 sm:h-40 bg-zinc-200 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%= user.posts[0].image %>" alt="pin-card">
                    </div>
                    <a href="/show/allposts" class="text-lg sm:text-xl font-semibold mt-2 sm:mt-3">Uploaded Pins</a>
                    <h5 class="text-xs sm:text-sm font-semibold opacity-60">
                        <%= user.posts.length %> pins
                    </h5>
                </div>
                <% } else { %>
                    <!-- Handle case where user.posts is undefined or empty -->
                    <p>No posts available</p>
                    <% } %>
        </div>


    </div>
    <script>
        document.querySelector('#uploadicon').addEventListener('click', () => {
            document.querySelector('#uploadForm input').click()
        })

        document.querySelector("#uploadForm input").addEventListener("change", () => {
            document.querySelector("#uploadForm").submit();
        })
    </script>




    <%- include('./partials/footer.ejs'); %>