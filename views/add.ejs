<%- include('./partials/Header.ejs'); %>
    <div class="w-full min-h-screen bg-zinc-800 px-5 py-3 text-white sm:px-10">
        <h1 class="text-xl">Create a new post.</h1>
        <hr class="opacity-10 mt-3">

        <form action="/createpost" method="post" class="mt-4" enctype="multipart/form-data">
            <input type="file" class="block w-full sm:w-1/3 px-3 py-2 cursor-pointer mb-2 sm:mb-0" name="postimage">
            <input class="block w-full sm:w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-black" type="text" placeholder="Title" name="title">
            <textarea class="block w-full sm:w-1/3 px-3 py-2 border-2 mt-2 rounded-md text-black" placeholder="Description" name="description"></textarea>
            <input class="block w-full sm:w-1/3 px-3 py-2 bg-red-700 mt-2 rounded-md cursor-pointer" type="submit" value="Submit">
        </form>
    </div>




    <%- include('./partials/footer.ejs'); %>